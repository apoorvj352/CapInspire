{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "next/core-web-vitals"
  ],
  "rules": {
    "eqeqeq": ["error", "always"]
  },
  "ignorePatterns": [
    ".*", // Ignore all dot files and folders
    ".*/*" // Ignore contents within dot folders
  ]
}
